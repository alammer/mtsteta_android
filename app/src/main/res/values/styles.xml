<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="DetailedMoviePoster">
        <item name="cornerSizeTopLeft">15dp</item>
        <item name="cornerSizeTopRight">15dp</item>
        <item name="cornerFamilyTopLeft">rounded</item>
        <item name="cornerFamilyTopRight">rounded</item>
    </style>

    <style name="UserAvatarCircleOverlay" parent="">
        <item name="cornerSize">50%</item>
        <item name="android:scaleType">center</item>
        <item name="android:background">@color/bg_color_avatar</item>
    </style>

    <style name="ProfileButtonOverlay" parent="">
        <item name="cornerSize">10dp</item>
        <item name="android:background">@color/color_profile_button</item>
    </style>

    <style name="DetailedActorPoster">
        <item name="cornerSize">10dp</item>
        <item name="cornerFamily">rounded</item>
    </style>

    <style name="MainscreenMoviePoster">
        <item name="cornerSize">10dp</item>
        <item name="cornerFamily">rounded</item>
    </style>

    <style name="Widget.App.Chip" parent="Widget.MaterialComponents.Chip.Entry">
        <item name="android:textAppearance">@style/TextAppearance.App.Body2</item>
        <item name="shapeAppearance">@style/ShapeAppearance.App.SmallComponent</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipBackgroundColor">@color/bg_color_detailed</item>
        <item name="chipIconEnabled">false</item>
        <item name="closeIconVisible">false</item>
        <item name="chipStrokeColor">@color/black</item>
        <item name="chipSurfaceColor">@color/transparent</item>
        <item name="chipEndPadding">12dp</item>
        <item name="chipStartPadding">12dp</item>
        <item name="chipSpacingVertical">4dp</item>
        <item name="chipMinTouchTargetSize">20dp</item>
        <item name="android:checkable">false</item>
        <item name="android:textColor">@color/transparent</item>
        <item name="chipMinHeight">18dp</item>
    </style>

    <style name="TextAppearance.App.Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textSize">@dimen/mini_text_size</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="ShapeAppearance.App.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>

    <style name="Genre" parent="android:Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:background">@drawable/rectangle_background</item>
        <item name="android:textColor">@color/transparent</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/mini_text_size</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="AgeLimit" parent="android:Widget.TextView">
        <item name="android:background">@drawable/oval_background</item>
        <item name="android:textColor">@color/transparent</item>
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="AgeLimitSmall" parent="android:Widget.TextView">
        <item name="android:background">@drawable/oval_background_small</item>
        <item name="android:textColor">@color/transparent</item>
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="MovieRatingBar" parent="Widget.AppCompat.RatingBar">
        <item name="android:progressDrawable">@drawable/custom_rating</item>
        <item name="android:minHeight">14dp</item>
        <item name="android:maxHeight">14dp</item>
    </style>

    <style name="ProfileSettingItem" parent="android:Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="ProfileSectionTitile" parent="android:Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">40dp</item>
        <item name="android:textSize">@dimen/big_text_size</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="ProfileUserInfoItem" parent="android:Widget.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:textColorHint">@color/color_setting_hint</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="SignField" parent="android:Widget.EditText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:textSize">@dimen/large_text_size</item>
        <item name="android:textColorHint">@color/color_setting_hint</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="SignButton" parent="android:Widget.Material.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/large_text_size</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="ProfileSettingItemSelector" parent="android:Widget.TextView">
        <item name="android:layout_width">6dp</item>
        <item name="android:layout_height">9dp</item>
        <item name="android:background">@drawable/ic_vector</item>
    </style>

</resources>
