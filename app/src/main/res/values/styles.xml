<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="img_poster_rounded_corner">
        <item name="cornerSizeTopLeft">15dp</item>
        <item name="cornerSizeTopRight">15dp</item>
        <item name="cornerFamilyTopLeft">rounded</item>
        <item name="cornerFamilyTopRight">rounded</item>
    </style>

    <style name="img_actor_rounded_corner">
        <item name="cornerSize">10dp</item>
        <item name="cornerFamily">rounded</item>
    </style>

    <style name="Genre_tv_Style" parent="android:Widget.TextView">
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:background">@drawable/rectangle_background</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/genre_text_size</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>
    
    <style name="AgeLimit_tv_Style" parent="android:Widget.TextView">
        <item name="android:background">@drawable/oval_background</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>
</resources>
