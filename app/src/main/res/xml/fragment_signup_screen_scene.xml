<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="2000">
       <KeyFrameSet>
       </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/textView"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toTopOf="@+id/etUserName"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            android:alpha="0"
            android:scaleX="0.1"
            android:scaleY="0.1"
            android:visibility="gone" />
        <Constraint
            android:id="@+id/etUserName"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintBottom_toTopOf="@id/etNewEmail"
            motion:layout_constraintVertical_chainStyle="packed"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            android:scaleX="0.1"
            android:scaleY="0.1"
            android:alpha="0"
            android:visibility="gone" />
        <Constraint
            android:id="@+id/etNewEmail"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintBottom_toTopOf="@id/etNewPhone"
            motion:layout_constraintTop_toBottomOf="@id/etUserName"
            motion:layout_constraintStart_toStartOf="parent"
            android:scaleX="0.1"
            android:scaleY="0.1"
            android:alpha="0"
            android:visibility="gone" />
        <Constraint
            android:id="@+id/etNewPhone"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintBottom_toTopOf="@id/etNewPassword"
            motion:layout_constraintTop_toBottomOf="@id/etNewEmail"
            motion:layout_constraintStart_toStartOf="parent"
            android:scaleX="0.1"
            android:scaleY="0.1"
            android:alpha="0"
            android:visibility="gone" />
        <Constraint
            android:id="@+id/etNewPassword"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintBottom_toTopOf="@id/etConfirmNewPassword"
            motion:layout_constraintTop_toBottomOf="@id/etNewPhone"
            motion:layout_constraintStart_toStartOf="parent"
            android:scaleX="0.1"
            android:scaleY="0.1"
            android:alpha="0"
            android:visibility="gone" />
        <Constraint
            android:id="@+id/etConfirmNewPassword"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintBottom_toTopOf="@id/btnCreateAccount"
            motion:layout_constraintTop_toBottomOf="@id/etNewPassword"
            motion:layout_constraintStart_toStartOf="parent"
            android:scaleX="0.1"
            android:scaleY="0.1"
            android:alpha="0"
            android:visibility="gone" />
        <Constraint
            android:id="@+id/btnCreateAccount"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintTop_toBottomOf="@id/etConfirmNewPassword"
            motion:layout_constraintStart_toStartOf="parent"
            android:scaleX="0.1"
            android:scaleY="0.1"
            android:alpha="0"
            android:visibility="gone" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/textView"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toTopOf="@+id/etUserName"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            android:scaleX="1"
            android:scaleY="1"
            android:alpha="1"
            android:visibility="visible"
            motion:transitionEasing="standard" />
        <Constraint
            android:id="@+id/etUserName"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintBottom_toTopOf="@id/etNewEmail"
            motion:layout_constraintVertical_chainStyle="packed"
            motion:layout_constraintTop_toTopOf="@id/textView"
            motion:layout_constraintStart_toStartOf="parent"
            android:scaleX="1"
            android:scaleY="1"
            android:alpha="1"
            android:visibility="visible" />
        <Constraint
            android:id="@+id/etNewEmail"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintBottom_toTopOf="@id/etNewPhone"
            motion:layout_constraintTop_toBottomOf="@id/etUserName"
            motion:layout_constraintStart_toStartOf="parent"
            android:scaleX="1"
            android:scaleY="1"
            android:alpha="1"
            android:visibility="visible" />
        <Constraint
            android:id="@+id/etNewPhone"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintBottom_toTopOf="@id/etNewPassword"
            motion:layout_constraintTop_toBottomOf="@id/etNewEmail"
            motion:layout_constraintStart_toStartOf="parent"
            android:scaleX="1"
            android:scaleY="1"
            android:alpha="1"
            android:visibility="visible" />
        <Constraint
            android:id="@+id/etNewPassword"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintBottom_toTopOf="@id/etConfirmNewPassword"
            motion:layout_constraintTop_toBottomOf="@id/etNewPhone"
            motion:layout_constraintStart_toStartOf="parent"
            android:scaleX="1"
            android:scaleY="1"
            android:alpha="1"
            android:visibility="visible" />
        <Constraint
            android:id="@+id/etConfirmNewPassword"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintBottom_toTopOf="@id/btnCreateAccount"
            motion:layout_constraintTop_toBottomOf="@id/etNewPassword"
            motion:layout_constraintStart_toStartOf="parent"
            android:scaleX="1"
            android:scaleY="1"
            android:alpha="1"
            android:visibility="visible" />
        <Constraint
            android:id="@+id/btnCreateAccount"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintTop_toBottomOf="@id/etConfirmNewPassword"
            motion:layout_constraintStart_toStartOf="parent"
            android:scaleX="1"
            android:scaleY="1"
            android:alpha="1"
            android:visibility="visible" />
    </ConstraintSet>
    <Transition
        motion:constraintSetStart="@+id/start"
        motion:constraintSetEnd="@+id/end"
        motion:autoTransition="animateToEnd" />
</MotionScene>