<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="320dp" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imgPoster"
        android:layout_width="360dp"
        android:layout_height="match_parent"
        android:background="@color/movie_details_bg_color"
        android:scaleType="centerCrop"
        android:src="@drawable/img_poster"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:shapeAppearanceOverlay="@style/img_poster_rounded_corner" />


    <androidx.cardview.widget.CardView
        android:id="@+id/detailView"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:elevation="0dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/guideLine"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/movie_details_bg_color">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingHorizontal="@dimen/detail_cardview_padding_horizontal"
                android:paddingTop="@dimen/detail_cardview_padding_top">

                <TextView
                    android:id="@+id/detailGenre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rectangle_background"
                    android:paddingHorizontal="@dimen/genre_view_padding_horizontal"
                    android:paddingVertical="@dimen/genre_view_padding_vertical"
                    android:fontFamily="@font/roboto"
                    android:text="@string/action_genre"
                    android:textAlignment="center"
                    android:textSize="@dimen/genre_text_size"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/releaseDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/movie_details_common_margin_top"
                    android:fontFamily="@font/roboto"
                    android:text="@string/release_date"
                    android:textSize="@dimen/small_text_size"
                    app:layout_constraintBaseline_toBaselineOf="@id/detailGenre"
                    app:layout_constraintStart_toEndOf="@id/detailGenre" />

                <TextView
                    android:id="@+id/movieTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/movie_details_common_margin_top"
                    android:fontFamily="@font/roboto_medium"
                    android:text="@string/movie_name"
                    android:textSize="@dimen/title_text_size"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/detailGenre" />

                <TextView
                    android:id="@+id/ageLimit"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginBottom="4dp"
                    android:background="@drawable/oval_background"
                    android:gravity="center"
                    android:fontFamily="@font/roboto"
                    android:text="@string/age_limit"
                    android:textAlignment="center"
                    android:textSize="@dimen/medium_text_size"
                    app:layout_constraintBottom_toBottomOf="@id/movieTitle"
                    app:layout_constraintEnd_toEndOf="parent" />

                <ImageView
                    android:id="@+id/fillStar1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/movie_details_common_margin_top"
                    android:src="@drawable/ic_filled_star"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/movieTitle" />

                <ImageView
                    android:id="@+id/fillStar2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/movie_details_common_margin_top"
                    android:src="@drawable/ic_filled_star"
                    app:layout_constraintStart_toEndOf="@id/fillStar1"
                    app:layout_constraintTop_toBottomOf="@id/movieTitle" />

                <ImageView
                    android:id="@+id/fillStar3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/movie_details_common_margin_top"
                    android:src="@drawable/ic_filled_star"
                    app:layout_constraintStart_toEndOf="@id/fillStar2"
                    app:layout_constraintTop_toBottomOf="@id/movieTitle" />

                <ImageView
                    android:id="@+id/fillStar4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/movie_details_common_margin_top"
                    android:src="@drawable/ic_filled_star"
                    app:layout_constraintStart_toEndOf="@id/fillStar3"
                    app:layout_constraintTop_toBottomOf="@id/movieTitle" />

                <ImageView
                    android:id="@+id/emptyStar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/movie_details_common_margin_top"
                    android:src="@drawable/ic_empty_star"
                    app:layout_constraintStart_toEndOf="@id/fillStar4"
                    app:layout_constraintTop_toBottomOf="@id/movieTitle" />

                <TextView
                    android:id="@+id/detailInfoText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/roboto"
                    android:text="@string/test_detail_text"
                    android:textAlignment="textStart"
                    android:textSize="@dimen/movie_info_text_size"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/fillStar1" />

                <TextView
                    android:id="@+id/actorsListTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="36dp"
                    android:fontFamily="@font/roboto_medium"
                    android:text="@string/actors_list_title"
                    android:textSize="@dimen/actors_list_header_text_size"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/detailInfoText" />

                <HorizontalScrollView
                    android:id="@+id/actorsList"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/movie_details_common_margin_top"
                    android:layout_marginBottom="96dp"
                    android:scrollbars="none"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/actorsListTitle">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/actorImage1"
                            android:layout_width="@dimen/actor_img_width"
                            android:layout_height="@dimen/actor_img_height"
                            android:scaleType="centerCrop"
                            android:src="@drawable/img_statem"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:shapeAppearanceOverlay="@style/img_actor_rounded_corner"/>

                        <TextView
                            android:id="@+id/actorName1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/actor_name_margin_top"
                            android:fontFamily="@font/roboto_bold"
                            android:text="@string/actor1_name"
                            android:textSize="@dimen/small_text_size"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/actorImage1" />

                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/actorImage2"
                            android:layout_width="@dimen/actor_img_width"
                            android:layout_height="@dimen/actor_img_height"
                            android:layout_marginStart="@dimen/actor_img_margin_start"
                            android:scaleType="centerCrop"
                            android:src="@drawable/img_mccallany"
                            app:layout_constraintStart_toEndOf="@id/actorImage1"
                            app:layout_constraintTop_toTopOf="parent"
                            app:shapeAppearanceOverlay="@style/img_actor_rounded_corner"/>

                        <TextView
                            android:id="@+id/actorName2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/actor_name_margin_top"
                            android:fontFamily="@font/roboto_bold"
                            android:text="@string/actor2_name"
                            android:textSize="@dimen/small_text_size"
                            app:layout_constraintStart_toStartOf="@id/actorImage2"
                            app:layout_constraintTop_toBottomOf="@id/actorImage2" />

                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/actorImage3"
                            android:layout_width="@dimen/actor_img_width"
                            android:layout_height="@dimen/actor_img_height"
                            android:layout_marginStart="@dimen/actor_img_margin_start"
                            android:scaleType="centerCrop"
                            android:src="@drawable/img_hartnett"
                            app:layout_constraintStart_toEndOf="@id/actorImage2"
                            app:layout_constraintTop_toTopOf="parent"
                            app:shapeAppearanceOverlay="@style/img_actor_rounded_corner"/>

                        <TextView
                            android:id="@+id/actorName3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/actor_name_margin_top"
                            android:fontFamily="@font/roboto_bold"
                            android:text="@string/actor3_name"
                            android:textSize="@dimen/small_text_size"
                            app:layout_constraintStart_toStartOf="@id/actorImage3"
                            app:layout_constraintTop_toBottomOf="@id/actorImage3" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </HorizontalScrollView>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>

    </androidx.cardview.widget.CardView>

    <com.google.android.material.tabs.TabLayout
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:elevation="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/guideLine"
        app:tabIconTint="@color/black"
        app:tabIndicatorColor="@color/black"
        app:tabMode="fixed"
        app:tabGravity="fill">

        <com.google.android.material.tabs.TabItem
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:icon="@drawable/ic_home_icon" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:icon="@drawable/ic_person_icon" />

    </com.google.android.material.tabs.TabLayout>

</androidx.constraintlayout.widget.ConstraintLayout>